root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.pug]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[{package.json,composer.json}]
indent_style = space
indent_size = 2
